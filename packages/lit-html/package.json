{
  "name": "lit-html",
  "version": "2.0.0-pre.0",
  "description": "HTML templates literals in JavaScript",
  "license": "BSD-3-Clause",
  "homepage": "https://lit-html.polymer-project.org/",
  "repository": "Polymer/lit-html",
  "type": "module",
  "main": "index.js",
  "typings": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "files": [
    "/index.js",
    "/index.js.map",
    "/index.d.ts",
    "/index.d.ts.map",
    "/lib/",
    "/directives/",
    "/src/",
    "!/src/test/"
  ],
  "scripts": {
    "build": "tsc",
    "test": "wtr test/**/*_test.js --node-resolve",
    "format": "prettier src/* --write",
    "check-version": "node check-version-tracker.js"
  },
  "author": "The Polymer Authors",
  "dependencies": {},
  "devDependencies": {
    "@bundled-es-modules/chai": "^4.2.2",
    "@types/mocha": "^8.0.3",
    "@web/test-runner": "^0.7.3",
    "mocha": "^8.1.1",
    "prettier": "^2.0.5",
    "typescript": "^4.0.0-beta"
  }
}
